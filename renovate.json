  },
  "helm-requirements": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": ["helm-values", "docker", "github-actions"],
      "postUpgradeTasks": {
        "commands": [
          "docker run --rm ERROR-THAT-WONT-RUN-DOES-IT-WORK?xD"
        ],
        "fileFilters": []
      }
    }
  ]
}
